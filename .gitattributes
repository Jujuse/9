# Словник з оцінками учнів (прізвище: список оцінок)
учні = {
    'Петренко': [5, 4, 3, 5, 4, 5, 4, 3, 4, 5],
    'Іваненко': [4, 4, 4, 4, 4, 4, 4, 4, 4, 4],
    'Сидоренко': [3, 3, 3, 3, 3, 3, 3, 3, 3, 3]
}

# 1. Функція для виведення всіх учнів


def показати_учнів():
    print("\nСписок учнів та їх оцінок:")
    for прізвище, оцінки in учні.items():
        print(f"{прізвище}: {оцінки}")

# 2. Функція для додавання нового учня


def додати_учня():
    прізвище = input("\nВведіть прізвище нового учня: ")

    if прізвище in учні:
        print("Такий учень вже є!")
        return

    # Введення оцінок
    try:
        оцінки = input("Введіть 10 оцінок через пробіл: ").split()
        оцінки = [int(оцінка) for оцінка in оцінки]

        if len(оцінки) != 10:
            print("Потрібно ввести 10 оцінок!")
            return

        учні[прізвище] = оцінки
        print(f"Учень {прізвище} доданий!")
    except:
        print("Помилка! Оцінки мають бути числами.")

# 3. Функція для видалення учня


def видалити_учня():
    прізвище = input("\nВведіть прізвище учня для видалення: ")

    if прізвище in учні:
        del учні[прізвище]
        print(f"Учень {прізвище} видалений!")
    else:
        print("Такого учня немає в списку!")

# 4. Функція для сортування учнів за прізвищем


def показати_відсортованих():
    print("\nУчні відсортовані за прізвищем:")
    for прізвище in sorted(учні.keys()):
        print(f"{прізвище}: {учні[прізвище]}")

# 5. Функція для пошуку найкращого учня


def найкращий_учень():
    if not учні:
        print("Немає учнів у списку!")
        return

    найкращий = max(учні.items(), key=lambda x: sum(x[1]))
    print(f"\nНайкращий учень: {найкращий[0]}")
    print(f"Його оцінки: {найкращий[1]}")
    print(f"Сума балів: {sum(найкращий[1])}")


# Головне меню програми
while True:
    print("\nОберіть дію:")
    print("1. Показати всіх учнів")
    print("2. Додати нового учня")
    print("3. Видалити учня")
    print("4. Показати відсортований список")
    print("5. Знайти найкращого учня")
    print("0. Вийти з програми")

    вибір = input("Ваш вибір: ")

    if вибір == '1':
        показати_учнів()
    elif вибір == '2':
        додати_учня()
    elif вибір == '3':
        видалити_учня()
    elif вибір == '4':
        показати_відсортованих()
    elif вибір == '5':
        найкращий_учень()
    elif вибір == '0':
        print("До побачення!")
        break
    else:
        print("Невірний вибір, спробуйте ще раз!")
